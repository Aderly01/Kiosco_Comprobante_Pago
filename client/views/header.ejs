<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/style.css">
    <title>Voucher</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>
<body>
    <div class="fml2">
        <%if (typeof codigo != 'undefined') {%>
            <div class="row">
                <div class="col-7">
                    <strong><label class="text-white">EMPLEADO: </label></strong><br>
                    <label class="text-white mb-2"><%= data.nombre_empleado %></label>   
                    <strong><label class="text-white">DEPARTAMENTO: </label></strong><br>
                    <label class="text-white mb-2"><%= data.departamento %></label><br>
                    <strong><label class="text-white">PUESTO:</label></strong><br>
                    <label class="text-white"><%= data.trabajo %></label>
                </div>   
                <div class="col-5">
                    <form method="POST">
                        <input type="text" value="<%= codigo %>" name="codigoEm" hidden>
                        <strong><label for="pin" class="mb-3 text-white">INGRESE SU PIN</label></strong>
                        <input type="password" name="pin" maxlength="4" minlength="4" id="pin" class="box-input text-center" placeholder="PIN" autofocus> <br>      
                        <div class="row">
                            <input type="submit" value="IMPRIMIR NOMINA" formaction="/pdf" class="btn btn-danger mt-2 mb-2">
                            <input type="submit" value="RESETEAR PIN" formaction="/set-pin" class="btn btn-danger mb-2">
                            <input type="submit" value="VOLVER" formaction="/" class="btn btn-danger mb-2">
                        </div> 
                    </form>
                </div>
            </div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <% if (typeof alert1 != "undefined")  { %>
        <script>
            Swal.fire({
            title:'<%= alertTitle %>',
            text:'<%= alertMessage %>',
            icon:'<%= alertIcon %>',
            showConfirmButton: <%= showConfirmButton %>,
            timer: <%= timer %>
            }).then(()=>{
            window.location='/<%= ruta %>'
            })
        </script>
    <% } %>
    <% if (typeof alert != "undefined")  { %>
    <script>
        Swal.fire({
        title:'<%= alertTitle %>',
        text:'<%= alertMessage %>',
        icon:'<%= alertIcon %>',
        showConfirmButton: <%= showConfirmButton %>,
        timer: <%= timer %>
        })
    </script>
    <% } %>
<%- include('footer') %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>